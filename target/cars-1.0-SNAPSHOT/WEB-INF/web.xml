<?xml version = "1.0" encoding = "UTF-8"?>
<web-app>
    <servlet>
        <servlet-name>cars</servlet-name>
        <servlet-class>com.haemimont.cars.servlet.CarServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>cars</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
    <resource-ref>
        <description>DataBase</description>
        <res-ref-name>jdbc/csv_cars_db</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>