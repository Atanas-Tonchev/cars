<?xml version = "1.0" encoding = "UTF-8"?>
<web-app>
    <servlet>
        <servlet-name>jokes</servlet-name>
        <servlet-class>com.haemimont.cars.servlet.JokesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>view</servlet-name>
        <servlet-class>com.haemimont.cars.servlet.CarView</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>search</servlet-name>
        <servlet-class>com.haemimont.cars.servlet.SearchServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>car</servlet-name>
        <servlet-class>com.haemimont.cars.servlet.CarServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteCar</servlet-name>
        <servlet-class>com.haemimont.cars.servlet.CarDelete</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateCar</servlet-name>
        <servlet-class>com.haemimont.cars.servlet.CarUpdate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.haemimont.cars.servlet.LogInServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>registration</servlet-name>
        <servlet-class>com.haemimont.cars.servlet.Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>com.haemimont.cars.servlet.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>view</servlet-name>
        <url-pattern>/CarView</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>jokes</servlet-name>
        <url-pattern>/JokesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>registration</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/LogInServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/LogOutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>car</servlet-name>
        <url-pattern>/CarServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>search</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteCar</servlet-name>
        <url-pattern>/CarDelete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateCar</servlet-name>
        <url-pattern>/CarUpdate</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
    <resource-ref>
        <description>DataBase</description>
        <res-ref-name>jdbc/csv_cars_db</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>
</web-app>